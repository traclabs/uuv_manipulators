<launch>
  <arg name="uuv_name" />
  <arg name="arm_name" default="oberon7"/>

  <!-- Load controller parameters -->
  <rosparam command="load" file="$(find oberon7_control)/config/joint_traj_effort_controller.yaml"/>

  <group ns="$(arg uuv_name)">
    <!-- load the controllers -->
    <node name="controller_spawner_$(arg arm_name)"
          pkg="controller_manager"
          type="spawner"
          respawn="false"
          output="screen"
          ns="/$(arg uuv_name)"
          args="arm_trajectory_controller"/>
  </group>
</launch>
